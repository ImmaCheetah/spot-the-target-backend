generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String    @default("Anonymous") @db.VarChar(20)
  finalTime DateTime?
}

model Map {
  id        String   @id @default(uuid())
  name      String   @unique
  startTime DateTime @default(now())
  endTime   DateTime
  targets   Target[]
}

model Target {
  id          String  @id @default(uuid())
  name        String
  coordinates Json
  isFound     Boolean @default(false)
  map         Map     @relation(fields: [mapId], references: [id])
  mapId       String
}
